#include <SDL.h>
#include "SDL_image.h"
#include "SDL_ttf.h"
#include "SDL_mixer.h"

#include <cstdio>
#include <iostream>
#include "engin.h"
#include "objects.h"

SDL_Surface * screen; // its the screen !

void event();

int main ( int argc, char** argv )
{
    screen=init("test",640,480);
    if (!screen)
        return 0;
    if (!load())
        return 0;

    //Mix_PlayMusic(var::_music_.at(0), 0);

    while (var::quit==0)
    {
        event();
        //clear
        SDL_FillRect(::screen, 0, SDL_MapRGB(screen->format, 0, 0, 180));

        //blit
        drip_blit(320,0,var::_img_.at(0),::screen);

        update(screen);

        //drip_blit(327-var::_img_.at(1)->w/2,10,var::_img_.at(1),::screen);
        drip_blit(20,460,var::_img_.at(2),::screen);


        //draw
        SDL_Flip(screen);

    }

    quit();

    printf("Player Quit");
    return 0;
}


/************
*** Event ***
*************
handle quit key events
 */

void event()
{
    SDL_Event event;
    while (SDL_PollEvent(&event))
    {
        switch (event.type)
        {
            case SDL_QUIT:
            {
                var::quit = true;
                break;
            }

            case SDL_KEYDOWN:
            {
                if (event.key.keysym.sym == SDLK_ESCAPE)
                {
                    var::quit = true;
                    break;
                }

                if (event.key.keysym.sym == SDLK_q)
                {
                    var::quit = true;
                    break;
                }
            }
        }
    }
}


